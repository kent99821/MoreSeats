<wux-dialog id='wux-dialog' />
<wux-toptips id="wux-toptips" />

<view class="c">
  <wux-cell title="创建自习室" hasLine="{{false}}" isLink></wux-cell>

</view>

<wux-swipe-action-group>
  <view wx:for="{{2}}" class="FCCC">
    <wux-swipe-action useSlots class="card FCCC" autoClose right="{{ right }}">
      <view class="card-body FCSC">
        <!-- 修改自习室名 -->
        <view class="body-row-1 FRSS" bindtap="修改自习室名">
          <view class="roomname wux-ellipsis">海大图书guan </view>
          <view class="ch-1 FCCC">
            <wux-icon type="md-create" size="25" />
          </view>
        </view>
        <view class="body-row-2 FRSC">
          <view class="cards-body-left-tags-1 FCCC">#{{123456}}</view>
          <!-- 修改开放时间 -->
          <view class="opentime FRSC" bindtap="修改开放时间">
            <image src="/images/clock.png" mode="widthFix" class="opentime-icon"></image>
            <view class="opentime-text wux-ellipsis">12 : 34 ~ 15 : 86 </view>
            <view class="ch-2 FCCC">
              <wux-icon type="md-create" size="15" />
            </view>
          </view>
        </view>
        <!-- 修改公告 -->
        <view class="body-row-3 FRSC" bindtap="修改公告">
          <image src="/images/notice.png" mode="widthFix" class="notice-icon"></image>
          <view class="notice-text wux-ellipsis">这是公告这是公告这是公告这是公告这是公告这是公告这是公告</view>
          <view class="ch-2 FCCC">
            <wux-icon type="md-create" size="15" />
          </view>
        </view>
        <view class="body-row-4">
          <view class="btns FRCC">
            <view class="btn FRCC" bindtap="">正在学习</view>
            <view class="btn FRCC" bindtap="">历史记录</view>
            <view class="btn FRCC" bindtap="">统计排名</view>
            <view class="btn FRCC" bindtap="">打卡规则</view>
            <view class="btn FRCC" bindtap="">座位管理</view>
          </view>
        </view>
      </view>
      <view slot="right">
        <view class="right-button FCCC" bindtap="deleteCard" data-index="{{index}}">
          <image mode="aspectFit" class="right-button-icon" src="/images/delete.png" />
        </view>
      </view>
    </wux-swipe-action>
  </view>
</wux-swipe-action-group>